@{
    Layout = null;
}
@using XCommsWeb.Classes;
<input type="hidden" value="@Session["msg"]" id="hdnmsg" />
@if (Session["type"] != null && Session["msg"] != null)
{
    var classname = "";
    if (Session["type"].ToString() == MessageType.Error.ToString())
    {
        classname = "alert alert-danger alert-dismissible";
    }
    if (Session["type"].ToString() == MessageType.Success.ToString())
    {
        classname = "alert alert-success alert-dismissible";
    }
    if (Session["type"].ToString() == MessageType.Info.ToString())
    {
        classname = "alert alert-info alert-dismissible";
    }
    <div class="@classname" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>@Session["msg"]</b>
    </div>

    Session["type"] = null;
    Session["msg"] = null;
}