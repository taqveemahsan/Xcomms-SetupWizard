<script type="text/javascript">
    var FormComponents = function (DomainName) {

         var FormValidate = function (DomainName) {
            $("#contact-form").validate({
                // Rules for form validation
                rules: {
                },
                // Messages for form validation
                messages: {
                },
                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        }

        var GetUserData = function (DomainName) {
            App.blockUI({ boxed: true });
            var StrURL1 = DomainName + "/Master/GetUserList?Id=" + $("#Id").val();
            $.ajax({
                url: StrURL1,
                cache: false,
                data: {},
                type: 'POST',
                success: function (data) {
                    $("#containerTblSubItem").html(data);
                    if ($.fn.DataTable.isDataTable('#UserList')) {
                        $('#UserList').DataTable().destroy();
                    }
                    dataTableWithId("UserList");
                    $("#UserList_info").hide();
                    $("#UserList_paginate").hide();
                    $("#UserList_length").hide();
                    App.unblockUI();
                },
                error: function (req, status, error) {
                    alert("error " + req + " " + status + " " + error);
                    App.unblockUI();
                }
            });
        }

        var dataTableWithId = function (tableId, sortingColumn) {
            var responsiveHelper_dt_basic = undefined;
            var responsiveHelper_datatable_fixed_column = undefined;
            var responsiveHelper_datatable_col_reorder = undefined;
            var responsiveHelper_datatable_tabletools = undefined;
            sortingColumn = (sortingColumn == "undefine" || sortingColumn == null || sortingColumn == "") ? 0 : sortingColumn;

            var breakpointDefinition = {
                tablet: 1024,
                phone: 480
            };
            $('#' + tableId).dataTable({
                "sDom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" +
                    "t" +
                    "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
                "autoWidth": true,
                "preDrawCallback": function () {
                    // Initialize the responsive datatables helper once.
                    if (!responsiveHelper_dt_basic) {
                        responsiveHelper_dt_basic = new ResponsiveDatatablesHelper($('#' + tableId), breakpointDefinition);
                    }
                },
                "rowCallback": function (nRow) {
                    responsiveHelper_dt_basic.createExpandIcon(nRow);
                },
                "drawCallback": function (oSettings) {
                    responsiveHelper_dt_basic.respond();
                },
                "aLengthMenu": [
                    [5, 10, 15, 20, -1],
                    [5, 10, 15, 20, "All"]
                ],
                "iDisplayLength": -1,
                "order": [[sortingColumn, 'desc']],
                "bSort": true
            });
            $(".dataTables_filter input").attr("placeholder", "Search here...")
        }

        var GetAlertTypeList = function (DomainName) {
            App.blockUI({ boxed: true });
            var StrURL1 = DomainName + "/Master/GetAlertTypeList?Id="+ $("#Id").val();
            $.ajax({
                url: StrURL1,
                cache: false,
                data: {},
                type: 'POST',
                success: function (data) {
                    $("#containerTblSubItem1").html(data);
                    App.unblockUI();
                },
                error: function (req, status, error) {
                    alert("error " + req + " " + status + " " + error);
                    App.unblockUI();
                }
            });
           
        }

        return {
            init: function (DomainName) {
                FormValidate(DomainName);
                if ('@Model.Id' > 0) {
                    $("#wid-id-33").hide();
                    $("#wid-id-3").hide();

                    //GetAlertTypeList(DomainName);

                    if ($("#Administator1").val() == 1) {
                        $("input[name=radioPosition][value=" + $("#Administator1").val() + "]").prop('checked', true);
                        $("#Administator").val(true);
                    }
                   // else
                        if ($("#CntManager").val() == 2) {
                        $("input[name=radioPosition][value=" + $("#ContentManager1").val() + "]").prop('checked', true);
                        $("#ContentManager").val(true);
                    }
                  //  else
                        if ($("#Custom1").val() == 3) {
                        $("input[name=radioPosition][value=" + $("#Custom1").val() + "]").prop('checked', true);
                        $("#Custom").val(true);
                        $("#Cust").val(true);
                        $("#wid-id-3").show();
                        GetAlertTypeList(DomainName);
                     }

                    if ($("#PermittedToTarget1").val() == 1) {
                        $("input[name=radioTarget][value=" + $("#PermittedToTarget1").val() + "]").prop('checked', true);
                        $("#PermittedToTarget").val(true);
                    }
                    else if ($("#CustomizeTarget1").val() == 2) {
                        $("input[name=radioTarget][value=" + $("#CustomizeTarget1").val() + "]").prop('checked', true);
                        $("#CustomizeTarget").val(true);
                        $("#wid-id-33").show();
                        GetUserData(DomainName);
                    }

                    if ($("#PersonalContent1").val() == 1) {
                        $("input[name=radioContent][value=" + $("#PersonalContent1").val() + "]").prop('checked', true);
                        $("#PersonalContent").val(true);
                    }
                    else if ($("#FullPermission1").val() == 2) {
                        $("input[name=radioContent][value=" + $("#FullPermission1").val() + "]").prop('checked', true);
                        $("#FullPermission").val(true);
                    }

                    $("input[name='radioPosition']").click(function () {

                        if ($("#Admin").is(":checked")) {
                            $("#Administator").val(true);
                        }
                        else {
                            $("#Administator").val(false);
                        }
                        if ($("#CntManager").is(":checked")) {
                            $("#ContentManager").val(true);
                        }
                        else {
                            $("#ContentManager").val(false);
                        }
                        if ($("#Cust").is(":checked")) {
                            $("#Custom").val(true);
                            $("#wid-id-3").show();
                            $("#wid-id-33").hide();
                            //GetAlertTypeList(DomainName);
                        }
                        else {
                            $("#Custom").val(false);
                            $("#wid-id-3").hide();
                        }
                    });

                    $("input[name='radioTarget']").click(function () {
                        if ($("#rbtTarget1").is(":checked")) {
                            $("#PermittedToTarget").val(true);
                        }
                        else {
                            $("#PermittedToTarget").val(false);
                        }

                        if ($("#rbtTarget2").is(":checked")) {
                            $("#CustomizeTarget").val(true);
                            $("#wid-id-33").show();
                            GetUserData(DomainName);

                            $(document).on('click', '#chkCheckAll', function () {
                                $('.IsCheck').prop('checked', $(this).prop('checked'));
                                if ($(this).prop('checked')) {
                                    $('.IsCheck').parent('span').addClass('checked');
                                    $('.IsCheck').val("true");
                                }
                                else {
                                    $('.IsCheck').parent('span').removeClass('checked');
                                    $('.IsCheck').val("false");
                                }
                            });
                        }
                        else {
                            $("#CustomizeTarget").val(false);
                            $("#wid-id-33").hide();
                        }
                    });

                    $("input[name='radioContent']").click(function () {
                        if ($("#OnlyPersonalContent").is(":checked")) {
                            $("#PersonalContent").val(true);
                        }
                        else {
                            $("#PersonalContent").val(false);
                        }
                        if ($("#FullViewPermission").is(":checked")) {
                            $("#FullPermission").val(true);
                        }
                        else {
                            $("#FullPermission").val(false);
                        }
                    });

                }
                else {
                    $("#PermissionlevelName").blur(function (e) {
                        if ($("#PermissionlevelName").val() == "") {
                            return false;
                        } else {
                            var strUrl = DomainName + '/Master/CheckDuplicatePermissionlevelName?Id=' + $(this).val();
                            $.ajax({
                                url: strUrl,
                                success: function (data) {
                                    if (data == 'False') {
                                        $('#PermissionlevelName').val('');
                                        $('#PermissionlevelName').focus();
                                        TosterNotification("error", "This Permission level Name Already exist..", "Oppps..!!");
                                    }
                                    else {
                                        $('#PermissionlevelName').val($(this).val());
                                        $('#PermissionlevelName').focusin();
                                        $('#PermissionlevelName').select();
                                    }
                                    //App.unblockUI();
                                    return data;
                                },
                                error: function (req, status, error) {
                                    $('#PermissionlevelName').val('');
                                    $('#PermissionlevelName').focus();
                                    //App.unblockUI();
                                    TosterNotification("error", 'Opration fail..!! There is some issue please try again or Contact your administrator for more detail.', "Oppps..!!");
                                    return false;
                                }
                            });
                        }
                    });

                    $("#wid-id-3").hide();

                    $("input[name='radioPosition']").click(function () {
                        $("#PermissionType").val(this.value);
                        GetAlertTypeList(DomainName);

                        if ($("#Admin").is(":checked")) {
                            $("#Administator").val(true);
                        }
                        else {
                            $("#Administator").val(false);
                        }
                        if ($("#CntManager").is(":checked")) {
                            $("#ContentManager").val(true);
                        }
                        else {
                            $("#ContentManager").val(false);
                        }
                        if ($("#Cust").is(":checked")) {
                            $("#Custom").val(true);
                            $("#wid-id-3").show();
                            $("#wid-id-33").hide();
                            //GetAlertTypeList(DomainName);

                        }
                        else {
                            $("#Custom").val(false);
                            $("#wid-id-3").hide();
                        }
                    });

                    $("input[name='radioTarget']").click(function () {
                        if ($("#rbtTarget1").is(":checked")) {
                            $("#PermittedToTarget").val(true);
                        }
                        else {
                            $("#PermittedToTarget").val(false);
                        }

                        if ($("#rbtTarget2").is(":checked")) {
                            $("#CustomizeTarget").val(true);
                            $("#wid-id-33").show();
                            GetUserData(DomainName);

                            $(document).on('click', '#chkCheckAll', function () {
                                $('.IsCheck').prop('checked', $(this).prop('checked'));
                                if ($(this).prop('checked')) {
                                    $('.IsCheck').parent('span').addClass('checked');
                                    $('.IsCheck').val("true");
                                }
                                else {
                                    $('.IsCheck').parent('span').removeClass('checked');
                                    $('.IsCheck').val("false");
                                }
                            });
                        }
                        else {
                            $("#CustomizeTarget").val(false);
                            $("#wid-id-33").hide();
                        }
                    });

                    $("input[name='radioContent']").click(function () {
                        if ($("#OnlyPersonalContent").is(":checked")) {
                            $("#PersonalContent").val(true);
                        }
                        else {
                            $("#PersonalContent").val(false);
                        }
                        if ($("#FullViewPermission").is(":checked")) {
                            $("#FullPermission").val(true);
                        }
                        else {
                            $("#FullPermission").val(false);
                        }
                    });
                    $('#CntManager').prop('checked', true);
                }



            }
        }
    }();
</script>
