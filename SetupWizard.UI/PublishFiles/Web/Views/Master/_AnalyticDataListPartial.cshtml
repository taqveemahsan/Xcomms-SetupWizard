@model IEnumerable<XCommsWeb.Models.PopAlertAnalyticDetail>
@using ServerWeb.Helper;
@using XCommsWeb.Classes;

<table class="table table-striped table-bordered table-hover table-responsive" id="dtPopAlertAnaly" style="overflow:scroll" border="1">
    <thead>
        <tr>
            @*<th class="text-center" style="width:20px;"><b>Alert Name</b></th>
                <th class="text-center" style="width:20px;"><b>Date/Time</b></th>*@
            @*<th class="text-center"><b>Full Name</b></th>*@

            <th class="text-center"><i class="fa fa-user txt-color-blue"></i> Name</th>
            <th class="text-center"><i class="fa fa-desktop txt-color-blue"></i> Computer Name</th>
            <th class="text-center"><i class="fa fa-calendar txt-color-blue"></i> Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @Html.HiddenFor(c => item.AlertName)
                @Html.HiddenFor(c => item.DateTime)
                @Html.HiddenFor(c => item.Deliverd)
                @Html.HiddenFor(c => item.Acknowleged)
                <td>@item.Name</td>
                @*<td class="text-center">@item.FullName</td>*@
                <td class="text-center">@item.ComputerName</td>
                <td class="text-center">
                    @item.DateTime
                </td>
            </tr>
        }
    </tbody>
</table>
