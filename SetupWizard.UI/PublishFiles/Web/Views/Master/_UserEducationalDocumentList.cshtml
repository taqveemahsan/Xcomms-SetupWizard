@model XCommsWeb.Models.CYGNUS_User_EducationalDetails
@using XCommsWeb.Models;
@using XCommsWeb.Helpers;

@{
   
}

<tr class="editorRow">
    @using (Html.BeginCollectionItem("EducationalDocumentList", Model.SrNo.ToString()))
    {
        <td class="center">
            @Html.TextBoxFor(model => model.EduQualification, new { @class = "form-control", @placeholder = "Educational Qualification" })
            @Html.HiddenFor(m => m.EduContentType)
            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.SrNo)
            @Html.HiddenFor(m => m.ItemIndex)
        </td>
        <td>
            <div class="col-md-7 EduDoc fileinput fileinput-new" data-provides="fileinput">
                @*<input type="hidden" value="@Model.Edu_Image" name="Edufiles">*@
                @Html.HiddenFor(m => m.Edu_Image, new { @name = "Edufiles" })
                <div class="fileinput-new thumbnail imgDefault" style="width: 100%;">
                    <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="">
                </div>
                <div class="fileinput-preview fileinput-exists thumbnail imgExists" style="max-width: 200px; max-height: 150px; line-height: 10px;">
                    @*<img src="data:@Model.EduContentType;base64,@Model.Edu_Image" alt="" id="imgEduDoc_@Model.SrNo">*@
                    @*<img src="@Model.Edu_Image" alt="" id="imgEduDoc_@Model.SrNo">*@
                    @if (ViewBag.DisplayType == "True")
                    {
                        // Azure file Path
                        <img src="@ViewBag.AzureUrl/Images/Education/@Model.Edu_Image" alt="">
                    }
                    else
                    {
                        <img src="~/Images/Education/@Model.Edu_Image" alt="">
                    }
                </div>
                <div>
                    <span class="btn default btn-file">
                        <span class="fileinput-new imgDefault">
                            Select image
                        </span>
                        <span class="fileinput-exists imgExists">
                            Change
                        </span>
                        <input type="file" name="Edufiles">
                    </span>
                    <a href="#" class="btn default fileinput-exists imgExists" data-dismiss="fileinput">
                        Remove
                    </a>
                </div>
            </div>
        </td>
        <td class="center">
            <a href="#" id="DeleteFirstRow" style="color: Maroon; font-size: 14px; font-weight: bolder;" class="deleteRow">X</a>
        </td>
    }
</tr>
