@model IEnumerable<XCommsWeb.Models.Tbl_Master_Users>
@using ServerWeb.Helper;
@using XCommsWeb.Classes;
@{
   int index = 1;
}
<table class="table table-striped table-bordered table-hover table-responsive" id="dtContentManager" style="overflow:scroll" border="1">
    <thead>
        <tr>
            @*<th><b>Sr No.</b></th>*@
            <th><i class="fa fa-user txt-color-blueDark fa-lg"></i> User Id</th>
            <th><i class="fa fa-user txt-color-blueDark fa-lg"></i> User Name</th>
            <th class="text-center"><i class="fa fa-calendar txt-color-blueDark fa-lg"></i> Registered Date</th>
            <th class="text-center"><i class="fa fa-check-circle txt-color-blueDark fa-lg"></i> Active</th>
            <th class="text-center"><i class="fa fa-pencil-square-o txt-color-blueDark fa-lg"></i> Permission Policy</th>
            <th class="text-center"><i class="fa fa-exclamation-circle txt-color-blueDark fa-lg"></i> Pop Up Alerts</th>
            <th class="text-center"><i class="fa fa-ellipsis-h txt-color-blueDark fa-lg"></i> Ticker</th>
            <th class="text-center"><i class="fa fa-desktop txt-color-blueDark fa-lg"></i> WallPaper</th>
            <th class="text-center"><i class="fa fa-laptop txt-color-blueDark fa-lg"></i> Screen Saver</th>
            <th class="text-center"><i class="fa fa-desktop txt-color-blueDark fa-lg"></i> Lock Screen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                @*<td>@index</td>*@
                <td>@item.UserId</td>
                <td>@item.Name</td>
                <td class="text-center">
                    <input type="hidden" value="@index" />
                    @item.EntryDate.FormateDateWithFullYearUS()
                </td>
                <td class="text-center">
                    @*@Html.Raw(item.StatusDesc)*@
                    <div class="badge bg-color-@Html.Raw(item.Iscancel == false ? "green" : "red") txt-color-white">
                        <i class="fa-sm txt-color-white fa fa-@Html.Raw(item.Iscancel == false ? "check-circle txt-color-greenLight" : "times-circle txt-color-red")"></i>
                        <small> @Html.Raw(item.Iscancel == false ? "Yes" : "No") </small>
                    </div>
                </td>
                <td class="text-center">@item.AccesslevelDesc</td>
                <td class="text-center @Html.Raw(item.AlertCnt == 0 ? "danger" : "success")">
                    @if (item.AlertCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="1">
                                <span class="txt-color-green">
                                    @item.AlertCnt
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.AlertCnt
                        </span>
                    }
                </td>
                <td class="text-center @Html.Raw(item.TickerCnt == 0 ? "danger" : "success")">
                    @if (item.TickerCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="2">
                                <span class="txt-color-green">
                                    @item.TickerCnt
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.TickerCnt
                        </span>
                    }
                </td>
                <td class="text-center @Html.Raw(item.WallPaperCnt == 0 ? "danger" : "success")">
                    @if (item.WallPaperCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="3">
                                <span class="txt-color-green">
                                    @item.WallPaperCnt
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.WallPaperCnt
                        </span>
                    }
                </td>
                <td class="text-center @Html.Raw(item.ScreenSaverCnt == 0 ? "danger" : "success")">
                    @if (item.ScreenSaverCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="4">
                                <span class="txt-color-green">
                                    @item.ScreenSaverCnt
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.ScreenSaverCnt
                        </span>
                    }
                </td>
                <td class="text-center @Html.Raw(item.LockScreenCnt == 0 ? "danger" : "success")">
                    @if (item.LockScreenCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="7">
                                <span class="txt-color-green">
                                    @item.LockScreenCnt
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.LockScreenCnt
                        </span>
                    }
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>