@model IEnumerable<XCommsWeb.Models.Tbl_Master_Users>
@using ServerWeb.Helper;
@using XCommsWeb.Classes;
@{
    int index = 1;
}

<table class="table table-striped table-bordered table-hover table-responsive" id="TblContentManager">
    <thead>
        <tr>
            <th class="TxtVerAlign text-center"><i class="fa fa-user txt-color-blueDark fa-lg"></i> User Id</th>
            <th class="TxtVerAlign text-center"><i class="fa fa-user txt-color-blueDark fa-lg"></i> User Name</th>
            <th class="TxtVerAlign text-center"><i class="fa fa-calendar txt-color-blueDark fa-lg"></i> Registered Date</th>
            <th class="TxtVerAlign text-center"><i class="fa fa-check-circle txt-color-blueDark fa-lg"></i> Active</th>
            <th class="TxtVerAlign text-center"><i class="fa fa-pencil-square-o txt-color-blueDark fa-lg"></i> Permission</th>
            @*<th class="TxtVerAlign text-center"><i class="fa fa-exclamation-circle txt-color-blueDark fa-lg"></i> PopUp</th>
            <th class="TxtVerAlign text-center"><i class="fa fa-ellipsis-h txt-color-blueDark fa-lg"></i> Ticker</th>
            <th class="TxtVerAlign text-center"><i class="fa fa-desktop txt-color-blueDark fa-lg"></i> WP</th>
            <th class="TxtVerAlign text-center"><i class="fa fa-laptop txt-color-blueDark fa-lg"></i> SS</th>
            <th class="TxtVerAlign text-center"><i class="fa fa-desktop txt-color-blueDark fa-lg"></i> LS</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="TxtVerAlign">
                    @item.UserId
                    <input type="hidden" value="@index" />
                </td>
                <td class="TxtVerAlign">
                    @item.Name
                </td>
                <td class="TxtVerAlign">
                    @item.EntryDate.FormateDateWithFullYearUS()
                </td>
                <td class="TxtVerAlign text-center">
                    <div class="badge bg-color-@Html.Raw(item.Iscancel == false ? "green" : "red") txt-color-white">
                        <i class="fa-sm txt-color-white fa fa-@Html.Raw(item.Iscancel == false ? "check-circle txt-color-greenLight" : "times-circle txt-color-red")"></i>
                        <small> @Html.Raw(item.Iscancel == false ? "Yes" : "No") </small>
                    </div>
                </td>
                <td class="TxtVerAlign">
                    @item.AccesslevelDesc
                </td>
                @*<td class="text-center @Html.Raw(item.AlertCnt == 0 ? "danger" : "success") TxtVerAlign">
                    @if (item.AlertCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="1">
                                <span class="badge bg-color-green txt-color-white">
                                    <small> @Html.Raw(item.AlertCnt) </small>
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.AlertCnt
                        </span>
                    }
                </td>
                <td class="text-center @Html.Raw(item.TickerCnt == 0 ? "danger" : "success") TxtVerAlign">
                    @if (item.TickerCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="2">
                                <span class="badge bg-color-green txt-color-white">
                                    <small> @Html.Raw(item.TickerCnt) </small>
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.TickerCnt
                        </span>
                    }
                </td>
                <td class="text-center @Html.Raw(item.WallPaperCnt == 0 ? "danger" : "success") TxtVerAlign">
                    @if (item.WallPaperCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="3">
                                <span class="badge bg-color-green txt-color-white">
                                    <small> @Html.Raw(item.WallPaperCnt) </small>
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.WallPaperCnt
                        </span>
                    }
                </td>
                <td class="text-center @Html.Raw(item.ScreenSaverCnt == 0 ? "danger" : "success") TxtVerAlign">
                    @if (item.ScreenSaverCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="4">
                                <span class="badge bg-color-green txt-color-white">
                                    <small> @Html.Raw(item.ScreenSaverCnt) </small>
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.ScreenSaverCnt
                        </span>
                    }
                </td>
                <td class="text-center @Html.Raw(item.LockScreenCnt == 0 ? "danger" : "success") TxtVerAlign">
                    @if (item.LockScreenCnt != 0)
                    {
                        <strong>
                            <a href="javascript:;" class="ClsAnalytics" data-userid="@item.UserId" data-type="7">
                                <span class="badge bg-color-green txt-color-white">
                                    <small> @Html.Raw(item.LockScreenCnt) </small>
                                </span>
                            </a>
                        </strong>
                    }
                    else
                    {
                        <span class="txt-color-red">
                            @item.LockScreenCnt
                        </span>
                    }
                </td>*@
            </tr>
            index++;
        }
    </tbody>
</table>