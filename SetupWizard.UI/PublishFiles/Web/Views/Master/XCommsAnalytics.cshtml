<script type="text/javascript">
    var FormComponents = function (DomainName) {

        var Events = function (DomainName) {
            $(".ClsCMTools").on("click", function () {
                App.blockUI();
                $.ajax({
                    type: 'POST',
                    url: DomainName + "/Customer/GetCustomerModule",
                    data: { 'CustomerId': $(this).data('id') },
                    success: function (data)
                    {
                        $("#TblCustModules").html("");
                        $("#TblCustModules").html(data);
                        $('#ModalCustModules').modal('show');
                        dataTableById("TblCustModules", 0, '', '');
                        App.unblockUI();
                    },
                    error: function (jqXHR, exception)
                    {
                        Swal.fire('Oops ! <br/><br/>' + errorResult(jqXHR, exception), '', 'error');
                        App.unblockUI();
                    }
                });
            });

            $(".ClsViewCompanyProf").on("click", function () {
                App.blockUI();
                $.ajax({
                    type: 'POST',
                    url: DomainName + "/Customer/GetCustomerProfileDetails",
                    data: { 'CustomerId': $(this).data('id') },
                    success: function (data)
                    {
                        $("#DivCustProfDet").html("");
                        $("#DivCustProfDet").html(data);
                        $('#ModalCustProfile').modal('show');
                        App.unblockUI();
                    },
                    error: function (jqXHR, exception)
                    {
                        Swal.fire('Oops ! <br/><br/>' + errorResult(jqXHR, exception), '', 'error');
                        App.unblockUI();
                    }
                });
            });

            $(".ClsContentManager").on("click", function () {
                App.blockUI();
                $.ajax({
                    type: 'POST',
                    url: DomainName + "/Master/GetContentManager",
                    data: { 'CustomerId': $(this).data('id') },
                    success: function (data)
                    {
                        $("#DivContentManagerData").html("");
                        $("#DivContentManagerData").html(data);
                        $('#ModalContentManager').modal('show');
                        dataTableById("TblContentManager", 2, 'desc', '');
                        App.unblockUI();
                    },
                    error: function (jqXHR, exception)
                    {
                        Swal.fire('Oops ! <br/><br/>' + errorResult(jqXHR, exception), '', 'error');
                        App.unblockUI();
                    }
                });
            });

            $(".ClsContentManagerAnalytic").on("click", function () {
                App.blockUI();
                $.ajax({
                    type: 'POST',
                    url: DomainName + "/Master/GetContentManagerData",
                    data: { 'UserId': $(this).data('userid'), 'Type': $(this).data('type') },
                    success: function (data)
                    {
                        if (data.Status == "0")
                        {
                            Swal.fire('Oops ! <br/><br/>' + data.Message, '', 'error');
                            App.unblockUI();
                        }
                        else
                        {
                            $("#tblData1").html("");
                            $("#tblData1").html(data);
                            $('#exampleModalTbl').modal('show');
                            GetContentmanagerDetail(DomainName)
                            dataTableById("tblData1", 0, 'desc');
                            App.unblockUI();
                        }
                    },
                    error: function (jqXHR, exception)
                    {
                        Swal.fire('Oops ! <br/><br/>' + errorResult(jqXHR, exception), '', 'error');
                        App.unblockUI();
                    }
                });
            });
        }

        var handleDateRangePickers = function (DomainName) {
            console.log("Call handleDateRangePickers");

            if (!jQuery().daterangepicker) {
                return;
            }

            $('#XCommsAnalyticsDTPicker').daterangepicker({
                opens: (App.isRTL() ? 'left' : 'right'),
                startDate: moment().subtract('days', 29),
                endDate: moment(),
                showDropdowns: true,
                showWeekNumbers: false,
                timePicker: false,
                timePickerIncrement: 1,
                timePicker12Hour: true,
                ranges: {
                    'Today': [moment(), moment()],
                    'Yesterday': [moment().subtract('days', 1), moment().subtract('days', 1)],
                    'Last 7 Days': [moment().subtract('days', 6), moment()],
                    'Last 30 Days': [moment().subtract('days', 29), moment()],
                    'This Month': [moment().startOf('month'), moment().endOf('month')],
                    'Last Month': [moment().subtract('month', 1).startOf('month'), moment().subtract('month', 1).endOf('month')],
                    'All': ['@ViewBag.StartDate', moment()]
                },
                buttonClasses: ['btn'],
                applyClass: 'green',
                cancelClass: 'default',
                format: 'MM/DD/YYYY',
                separator: ' to ',
                locale: {
                    applyLabel: 'Apply',
                    fromLabel: 'From',
                    toLabel: 'To',
                    customRangeLabel: 'Custom Range',
                    daysOfWeek: ['Su', 'Mo', 'Tu', 'We', 'Th', 'Fr', 'Sa'],
                    monthNames: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
                    firstDay: 1
                }
            },
            function (start, end) {
                $('#FromDate').val(start.format('MMM D, YYYY'));
                $('#ToDate').val(end.format('MMM D, YYYY'));
                $('#XCommsAnalyticsDTPicker span').html(start.format('MMM D, YYYY') + ' - ' + end.format('MMM D, YYYY'));
            }
            );
            $('#XCommsAnalyticsDTPicker span').html(moment().subtract('days', 29).format('MMM D, YYYY') + ' - ' + moment().format('MMM D, YYYY'));
            $('#FromDate').val(moment().subtract('days', 29).format('MMM D, YYYY'));
            $('#ToDate').val(moment().format('MMM D, YYYY'));
        }

        var GetAnalyticsDataList = function (DomainName) {
            App.blockUI();
            var strurl = DomainName + "/Master/GetClientAnalyticsDataByCriteria";
            $.ajax({
                url: strurl,
                data: $("#FormXCommsAnalytics").serialize(),
                type: 'POST',
                success: function (data)
                {
                    console.log("Result Data : " + data);
                    $("#divResultData").html("");
                    $("#divResultData").html(data);
                    $("[rel='tooltip']").tooltip();
                    Events(DomainName);
                    dataTableById("tblClientAnalytics", 1, "desc", "");
                    App.unblockUI();
                },
                error: function (req, status, error) {
                    App.unblockUI();
                    Swal.fire('Oops ! <br/><br/>' + errorResult(jqXHR, exception), '', 'error');
                }
            });
        }

        return {
            //main function to initiate the module
            init: function (DomainName) {
                GetAnalyticsDataList(DomainName);
                Events(DomainName);
                $("#btnSearchAnalytics").click(function () {
                    GetAnalyticsDataList(DomainName);
                });
                $("[rel='tooltip']").tooltip();
                handleDateRangePickers(DomainName);
            }
        }
    }();
</script>