@model XCommsWeb.Models.XCommsAnalyticsViewModel
@{
    ViewBag.Title = "XComms Analytics";
    ViewBag.TitleList = "XComms Analytics List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .TxtVerAlign {
        vertical-align: middle !important;
    }

    .MainBox {
        box-shadow: rgba(14, 30, 37, 0.12) 0px 2px 4px 0px, rgba(14, 30, 37, 0.32) 0px 2px 16px 0px !important;
