@model XCommsWeb.Models.AlertModel
@{
    //Model.ThemeId = Model.AlertId == 0 ? "" : Model.ThemeId;
    //Model.AlertTital = Model.AlertId == 0 ? "" : Model.AlertTital;
    //Model.AlertBody = Model.AlertId == 0 ? "" : Model.AlertBody;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Templates/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Templates/css/style.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif !important;
        }

        .card-body-bg {
            overflow-y: auto;
        }

        ::-webkit-scrollbar {
            width: 10px;
        }

        /* Track */
        ::-webkit-scrollbar-track {
            box-shadow: inset 0 0 5px grey;
            border-radius: 10px;
        }

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #0d1723;
            border-radius: 10px;
        }

        .container, .container-fluid, .container-lg, .container-md, .container-sm, .container-xl, .container-xxl {
            padding-right: var(--bs-gutter-x,-0.25rem);
            padding-left: var(--bs-gutter-x,-0.25rem);
        }

        html {
            height: calc(100% - 0px);
        }

        .card * {
            max-width: 100%;
        }

        .card-body-div {
            min-height: 100%;
        }

        .card-title ,.card-title > p , .txtbody > p {
            margin: 0px !important;
        }
    </style>
    <title>Xcomms</title>
</head>
<body>
    <div class="container-fluid inheriteHeight">
        <div class="row inheriteHeight">
            <!--- Theme One --->
            <div class="card inheriteHeight">
                <div class="@Model.ThemeId" id="PreviewThemeId">
                    <div class="row rowfix">

                        @if (File.Exists(Server.MapPath(".." + Model.CompanyLogo)))
                        {
                            <img src="..@Model.CompanyLogo" class="logo img-fluid" />
                        }
                        else
                        {
                            <img src="~/Templates/img/logo.png" class="logo img-fluid" />
                        }

                        @*<img src="..@Model.CompanyLogo" class="logo img-fluid" />*@
                        @*<a href="#"><img src="../Templates/img/close-icon.png" onclick="closeWin();" class="img-fluid close" /> </a>*@
                        <a href="#"><img src="@Url.Content("~/Templates/img/close-icon.png")" onclick="window.parent.document.getElementById('divPreview').style.display = 'none';" class="img-fluid close" /> </a>
                    </div>
                </div>
                <div class="card-body card-body-bg inheriteHeight">
                    <div class="card-body-div">
                        <div class="card-title" id="title">@Html.Raw(@Model.AlertTital)</div>
                        <div class="txtbody">
                            <p class="card-text" id="txtbody">@Html.Raw(@Model.AlertBody) </p>
                        </div>
                    </div>
                </div>
            </div>
            <!--- Theme One Close --->
        </div>
    </div>

    <!-- Bootstrap JS-->
    <script src="~/Templates/js/bootstrap.js"></script>
    <script type="text/javascript">
        function closeWin() {
            window.parent.document.getElementById('divPreview').style.display = "none";
        }
    </script>
</body>
</html>