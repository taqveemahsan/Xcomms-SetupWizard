        clear: both;
        font-weight: 400;
        line-height: 1.42857143;
        color: #333;
        white-space: nowrap;
        font-size: 12px !important;
    }

        .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
            text-decoration: none;
            color: #fff;
            background-color: #a90329 !important;
        }
    .smart-form fieldset {
        display: block;
        padding: 6px 5px 5px;
        border: none;
        background: rgba(255, 255, 255, .9);
        position: relative;
    }

    .jarviswidget .widget-body {
        min-height: 10px;
        position: relative;
        padding-bottom: 13px;
    }

    .bootstrap-select {
        width: 100%;
    }

    .mrgtop10 {
        margin-top: 10px
    } 

    .tabletr {
        background-color: #efefef;
