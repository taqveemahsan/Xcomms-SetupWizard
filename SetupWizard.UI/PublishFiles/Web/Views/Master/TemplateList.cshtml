@using (Html.BeginForm("DeleteMultipleTemplate", "Master", FormMethod.Post, new { id = "form_sample" }))
{
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="jarviswidget jarviswidget-color-darken jarviswidget-sortable" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false" data-widget-fullscreenbutton="false">
                <header>
                    <span class="widget-icon"> <i class="fa fa-list"></i> </span>
                    <h2>@ViewBag.Title</h2>
                </header>
                <div class="widget-body">

                    <div class="col-md-12">
                        <div class="pull-left">
                            <ul class="demo-btns">
                                <li>
                                    <a href="javascript:void(0);" class="ClsAdd btn btn-labeled btn-primary" rel="tooltip" title="" data-placement="bottom" data-original-title="Add New Template">
                                        <span class="btn-label"><i class="fa fa-plus"></i></span>Add Template
                                    </a>
                                </li>
                                <li>
                                    <a href="javascript:void(0);" id="btnDelete" class="btn btn-labeled btn-danger" rel="tooltip" title="" data-placement="bottom" data-original-title="Delete Template">
                                        <span class="btn-label"><i class="fa fa-trash-o"></i></span>Delete Template
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                    <div class="col-md-12">
                        <table id="TemplateList" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th class="text-center no-sort" style="width:25px;">
                                        <div class="smart-form" >
                                            <label class="checkbox">
                                                <input type="checkbox" name="checkbox" id="chkCheckAll">
                                                <i></i>
                                            </label>
                                        </div>
                                    </th>
                                    @*<th>Template Id</th>*@
                                    <th class="text-center"> <i class="fa fa-folder txt-color-blueDark fa-lg"></i> Template Name</th>
                                    <th class="text-center"> <i class="fa fa-folder txt-color-blueDark fa-lg"></i> Template Title</th>
                                    <th class="text-center col-md-2"><i class="fa fa-user txt-color-blueDark fa-lg"></i> Content Creator</th>
                                    <th class="text-center col-md-2"><i class="fa fa-calendar txt-color-blueDark fa-lg"></i> Created On (EST)</th>
                                    <th class="text-center col-md-1"><i class="fa fa-pencil-square txt-color-blueDark fa-lg"></i> Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    Html.RenderPartial("_TemplateListDetails", item);
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </article>
    </div>
}

