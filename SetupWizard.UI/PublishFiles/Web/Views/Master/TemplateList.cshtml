<div class="modal fade" id="ConfirmationMessage" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title"><strong>Confirmation</strong></h4>
            </div>
            <div class="modal-body">
                <div class="row" id="message">
                    <h5>
                        <span class="control-label">Are you sure you want to delete  </span><b><span id="DeleteSr"> </span></b> ?
                        <br />
                        <br />
                        <span class="control-label">If yes then please press <b>"Confirm"</b> other wise kindly press "Close".</span>
                    </h5>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-close"></i><span class="mrgleft5">Close</span></button> &nbsp;
                <button type="button" class="btn btn-primary DeleteRow" id="DeleteRow" value="1"><i class="fa fa-check"></i><span class="mrgleft5">Confirm</span></button>
            </div>
        </div>
    </div>
</div>

<script>
    var FormComponents = function (DomainName) {

        var Events = function (DomainName) {
            $("#TemplateList a , .btnAddEdit").on("click", function (e) {
                 App.blockUI({ boxed: true });
            });
        }
        return {
            init: function (DomainName) {
                Events(DomainName);
                $("#chkCheckAll").click(function () {
                    if (this.checked) {
                        $('.chkCheck').each(function () {
                            $(".chkCheck").prop('checked', true);
                        })
                    } else {
                        $('.chkCheck').each(function () {
                            $(".chkCheck").prop('checked', false);
                        })
                    }
                });
                var TotalCount = 5;
                $(".chkCheck").click(function () {
                    var SelectCount = 0;
                    $(".chkCheck").each(function () {
                        if (this.checked) {
                            SelectCount = SelectCount + 1;
                        }
                    });
                    if (SelectCount == TotalCount) {
                        $("#chkCheckAll").prop('checked', true);
                    }
                    else {
                        $("#chkCheckAll").prop('checked', false);
                    }
                });
                dataTableById("TemplateList", 4, 'desc', true);
                $("#TemplateList").parents('.row').show(500);
                $("#btnDelete").click("on", function () {
                    var count = 0;
                    $(".chkCheck").each(function () {
                        if (this.checked) {
                            count = count + 1;
                        }
                    });
                    if (count == 0) {
                        Swal.fire({
                            title: "Please select at least one record !",
                            text: "",
                            icon: "error",
                            confirmButtonText:
                                '<i class="fa fa-thumbs-up"></i> Okay !',
                            showCancelButton: false,
                            cancelButtonColor: '#d33'
                        });
                        return false;
                    }
                    var form = $('#form_sample');
                    var table = $('#TemplateList').DataTable();
                    table.destroy();
                    if (form.valid() == false) {
                        return false;
                    }
                    else {
                        dataTableById("TemplateList",4,'desc', true);
                        $('#ConfirmationMessage').modal('show');

                        $(".DeleteRow").on("click", function () {
                            var result = $(this).val();

                            if (result == 1) {
                                document.forms["form_sample"].submit();
                                return true;
                            }
                        });

                    }
                });

                var DetailPostBackURL = DomainName + '/Master/TemplatPreviewPopup';
                $(function () {
                    $(".anchorDetail").click(function () {
                        App.blockUI({ boxed: true });
                        var $buttonClicked = $(this);
                        var id = $buttonClicked.attr('data-id');
                        var options = { "backdrop": "static", keyboard: true };
                        $.ajax({
                            type: "GET",
                            url: DetailPostBackURL,
                            contentType: "application/json; charset=utf-8",
                            data: { "Id": id },
                            datatype: "json",
                            success: function (data) {
                                //console.log(data);
                                $('#myModalContent').html(data);
                                //$('#myModal').modal(options);
                                $('#myModal').modal('show');
                                App.unblockUI();
                            },
                            error: function () {
                                alert("Dynamic content load failed.");
                                App.unblockUI();
                            }
                        });
                    });

                    $("#closbtn").click(function () {
                        $('#myModal').modal('hide');
                        App.unblockUI();
                    });
                });

                $(".DeleteTemplate").on("click", function () {
                    $('#DeleteRow').val(1);
                    var result = $(this).attr('id');
                    var Id = result.substr(result.indexOf("_") + 1)
                    $('#ConfirmationMessage').modal('show');
                    var confirm = $('#DeleteRow').val();
                    $("#DeleteRow").on("click", function () {
                        if (confirm == 1) {
                            window.location = DomainName + "/Master/DeleteTemplate/" + Id;
                        }
                    });
                    App.unblockUI();
                });

                $('.ClsAdd').click(function () {
                    App.blockUI({ boxed: true });
                    window.location = DomainName + "/Master/AddTemplate/0";
                });

                if ('@ViewBag.IsExpired' == 1) {
                    $('.ClsAdd ').hide();
                    $('#btnDelete ').hide();
                    $('.DeleteTemplate').addClass('disabled-link');
                }
                dataTableById("TemplateList", 4, 'desc', true);
            }
        }
    }();
</script>

