@model IEnumerable<XCommsWeb.Models.PopQuizAnalyticDetail>
@using ServerWeb.Helper;
@using XCommsWeb.Classes;

<table class="table table-striped table-bordered table-hover table-responsive" id="dtPopAlertAnaly" style="overflow:scroll" border="1">
    <thead>
        <tr>
            <th class="text-center"><i class="fa fa-question-circle txt-color-blue fa-lg"></i> Question </th>
            <th class="text-center"><i class="fa fa-check-circle txt-color-blue fa-lg"></i> Correct Ans. </th>
            <th class="text-center"><i class="fa fa-check-circle-o txt-color-blue fa-lg"></i> Correct % </th>
            <th class="text-center"><i class="fa fa-times-circle txt-color-blue fa-lg"></i> Incorrect Ans. </th>
            <th class="text-center"><i class="fa fa-times-circle-o txt-color-blue fa-lg"></i> Incorrect % </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(Model => Model.Id))
        {
            <tr>
                <td class="col-md-6">
                    @Html.HiddenFor(c => item.Id)
                    <strong style="overflow-wrap: anywhere !important;">
                        <a href="javascript:;" class="ClsshowQuestion" data-id="@item.Id">
                            <span class="txt-color-blue">
                                @item.Question
                            </span>
                        </a>
                    </strong>
                </td>
                <td class="text-center col-md-1 @Html.Raw(item.CorrectAnswer == 0 ? "danger" : "success")">
                    @if (item.CorrectAnswer == 0)
                    {
                        <span>@item.CorrectAnswer</span>
                    }
                    else
                    {
                        <strong>
                            <a href="javascript:;" class="ClsCorrectAnswer" data-id="@item.Id" data-type="Correct">
                                <span class="txt-color-blue">
                                    @item.CorrectAnswer
                                </span>
                            </a>
                        </strong>
                    }
                </td>
                <td class="text-center col-md-1"> @item.CorrectPer </td>
                <td class="text-center col-md-1 @Html.Raw(item.IncorrectAnswer == 0 ? "danger" : "success")">
                    @if (item.IncorrectAnswer == 0)
                    {
                        <span>@item.IncorrectAnswer</span>
                    }
                    else
                    {
                        <strong>
                            <a href="javascript:;" class="ClsCorrectAnswer" data-id="@item.Id" data-type="Incorrect">
                                <span class="txt-color-blue"> @item.IncorrectAnswer </span>
                            </a>
                        </strong>
                    }
                </td>
                <td class="text-center col-md-1"> @item.InCorrectPer </td>
                @*<td class="text-center col-md-1">@item.TotalAnswer</td>*@
            </tr>
        }
    </tbody>
</table>
