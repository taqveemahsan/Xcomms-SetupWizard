@model IEnumerable<XCommsWeb.Models.Tbl_Permission>
@{
    ViewBag.Title = "Permission List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style> 
    .mrgtop10 {
        margin-top: 10px
    }
   
    .dropdown-menu > li > a {
        display: block;
        padding: 3px 20px;
        clear: both;
        font-weight: 400;
        line-height: 1.42857143;
        color: #333;
        white-space: nowrap;
        font-size: 12px !important;
    }

        .dropdown-menu > li > a:focus, .dropdown-menu > li > a:hover {
            text-decoration: none;
            color: #fff;
            background-color: #a90329 !important;
        }

    .btn-primary.active, .btn-primary:active, .btn-primary:focus, .btn-primary:hover, .open > .dropdown-toggle.btn-primary {
        color: #fff;
        background-color: #a90329;
        border-color: #a90329;
    }

    .dt-toolbar {
        padding: 6px 0px 1px;
    }

    .dt-toolbar-footer {
        border-top: 0px;
    }
</style>
<div class="row">

    <article class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
        <div class="jarviswidget jarviswidget-sortable" id="wid-id-0" data-widget-editbutton="false" data-widget-custombutton="false">
            <header>
                <span class="widget-icon"> <i class="fa fa-list"></i> </span>
                <h2>@ViewBag.Title</h2>
            </header>
            <div class="widget-body">
                <div class="col-md-12">
                    <a href="@Url.Content("~/Master/CreateNewPermission?Id=0")" class="btn btn-primary"> <i class="fa fa-plus"></i> Add Permission</a>
                </div>
                <div class="col-md-12 mrgtop10">
                    <table id="PerList" class="table table-striped table-bordered table-hover" width="100%">
                        <thead>
                            <tr>
                                <th>Permission Level Name</th>
                                <th>Assigned</th>
                                <th class="text-center">Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                Html.RenderPartial("_PermissionDetails", item);
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </article>
</div>

<script>
        var FormComponents = function (DomainName) {

            var Events = function (DomainName) {
                $("#PerList a").on("click", function (e) {
                    // App.blockUI({ boxed: true });
                });
            }
            return {
                init: function (DomainName) {
                    Events(DomainName);
                    dataTableById('PerList');
                    $("#PerList").parents('.row').show(500);

                   
                }
            }
        }();
</script>

